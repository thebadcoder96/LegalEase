{
    "manifest_version": 3,
    "name": "LegalEase",
    "version": "1.0.0",
    "description": "A browser extension that helps users understand online legal documents.",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "LegalEase - Click for instructions"
    },
    "permissions": [ "scripting", "activeTab", "storage", "sidePanel" ],
    "host_permissions": [ "https://*/*", "http://*/*" ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"]
        }
    ],
    "side_panel": {
        "default_path": "sidePanel.html"
    },
    "options_page": "options.html"
}